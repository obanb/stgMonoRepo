{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "outDir": "lib",
    "rootDir": "src",
    "baseUrl": ".",
    "strict": true,
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "paths": {
      "*": ["src/types/*", "node_modules/*"]
    },
    "lib": ["dom", "esnext"]
  },
  "include": ["src/**/*"],
  "exclude": ["lib/**/*.d.ts"]
}
